<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokemonDetailsActivity">

    <View
        android:id="@+id/viewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_background_white" />


    <LinearLayout
        android:id="@+id/llHeightWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/cvPokemonDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemonInfo"
        tools:layout_height="100dp"
        tools:visibility="visible">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPokemonHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPokemonHeightInterior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                tools:layout_height="80dp">

                <View
                    android:layout_width="115dp"
                    android:layout_height="85dp"
                    android:background="@color/transparent_really_white" />


                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/height"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPokemonHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:text="500kg"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:text="156cm" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPokemonWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPokemonWeightInterior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                tools:layout_height="80dp">

                <View
                    android:layout_width="115dp"
                    android:layout_height="85dp"
                    android:background="@color/transparent_really_white" />


                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/weight"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPokemonWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:text="500kg"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:text="100kg" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarDetails"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />


    <LinearLayout
        android:id="@+id/pokemonInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/black_pokeball" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:text="Nº"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPokemonIdDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:text="ID" />

    </LinearLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvPokemonDetail"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="150dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="4dp"
        tools:visibility="visible">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/transparent_pokeball" />

        <ImageView
            android:id="@+id/ivPokemonDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            tools:layout_height="350dp"
            tools:layout_width="350dp"
            tools:src="@drawable/placeholder" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/shinyAnimation"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="50dp"
            android:layout_gravity="center|bottom"
            app:lottie_rawRes="@raw/shining"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvPokemonNameDetail"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:cardCornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvPokemonDetail"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        tools:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_really_white" />

        <TextView
            android:id="@+id/tvPokemonNameDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="16dp"
            android:text="POKEMON"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/llPokemonType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/cvPokemonDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvPokemonNameDetail">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvPokemonFirstType"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"
            android:visibility="gone"
            app:cardCornerRadius="0dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            tools:visibility="visible">

            <View
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:background="@color/low_transparent" />

            <TextView
                android:id="@+id/tvPokemonFirstType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="FUEGO" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvPokemonSecondType"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginHorizontal="8dp"
            android:visibility="gone"
            app:cardCornerRadius="0dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            tools:visibility="visible">

            <View
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:background="@color/low_transparent" />

            <TextView
                android:id="@+id/tvPokemonSecondType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="FUEGO" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvPokemonDescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:padding="8dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llPokemonType"
        tools:visibility="visible">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPokemonDescriptionInterior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp"
            tools:layout_height="80dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent_white" />

            <TextView
                android:id="@+id/tvPokemonDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                tools:text="Está será la descripción del Pokemon" />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>